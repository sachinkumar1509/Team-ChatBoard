@{
    ViewData["Title"] = "Home";
    Layout = null; // 🚫 disables _Layout.cshtml
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChatBoard</title>

    <!-- Bootstrap & Site Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChatBoard.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .welcome-card {
            background: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 400px;
        }

        h2 {
            color: #007bff;
            margin-bottom: 15px;
        }

        .btn {
            width: 100%;
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="welcome-card">
        <h2>Welcome to <strong>ChatBoard</strong></h2>
        <p class="text-muted">Choose an option below to continue.</p>

        <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Login</a>
        <a href="@Url.Action("Register", "Account")" class="btn btn-success">Register New User</a>
        @* <a href="@Url.Action("Index", "Chat")" class="btn btn-outline-secondary mt-2">Go to Chat Dashboard</a> *@
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
