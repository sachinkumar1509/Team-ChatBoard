@{
    ViewBag.Title = "Register - ChatBoard";
}
<div class="d-flex justify-content-center align-items-start" style="min-height: 100%;">
    <div class="card shadow-sm p-4 mt-4 mb-4" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Register</h3>
        </div>
        <form method="post" asp-action="Register">
           @*  <div class="mb-3">
                <label for="employeeCode" class="form-label">Employee Code</label>
                <input type="text" name="EmployeeCode" id="employeeCode" class="form-control" placeholder="Enter your employee code" required />
            </div> *@
            <div class="mb-3">
                <label for="empCode" class="form-label">Employee Code</label>
                <input type="text" name="EmpCode" id="empCode" class="form-control" placeholder="Enter your employee code" required />
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="Username" id="username" class="form-control" placeholder="Enter your username" required />
            </div>
            <div class="mb-3">
                <label for="displayName" class="form-label">Display Name</label>
                <input type="text" name="DisplayName" id="displayName" class="form-control" placeholder="Enter your display name" required />
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="Email" id="email" class="form-control" placeholder="Enter your email" />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="Password" id="password" class="form-control" placeholder="Enter your password" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Register</button>
            <div class="text-center mt-3">
                <span>Already have an account? <a href="@Url.Action("Login", "Account")">Login</a></span>
            </div>
        </form>
    </div>
</div>
<style>
    .card {
        border-radius: 12px;
    }

    .form-label {
        font-weight: 500;
    }
</style>